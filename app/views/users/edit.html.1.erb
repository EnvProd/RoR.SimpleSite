<% provide(:title, 'Настройки') %>
<div class="users-new-page">
    <h1 class="users-new-page__title">Настройки</h1>

<div class="row form-group">
  <div class="col-md-4 offset-md-4">


    <%= form_for @user, url: {action: "update_name", controller: "users", user_id: @user.id}, method: :post  do |f| %>

    <h6>Личные данные</h6>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :first_name, class: "form-control-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :second_name, class: "form-control-label" %>
      <%= f.text_field :second_name, class: "form-control" %>
    </div>
      <%= f.submit "Сохранить изменения", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <%= form_for @user, url: {action: "update_email", controller: "users", user_id: @user.id}, method: :post  do |f| %>

    <h6>Связь</h6>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :email, class: "form-control-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
      <%= f.submit "Сохранить изменения", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <%= form_for @user, url: {action: "update_password", controller: "users", user_id: @user.id}, method: :post  do |f| %>
    
    <h6>Безопасность</h6>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :password, class: "form-control-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "rePassword", class: "form-control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
      <%= f.submit "Сохранить изменения", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

  </div>
</div>

</div>